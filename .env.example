# Environment Configuration for SpendShare
# Copy this file to .env and update with your values

# ============================================
# General Configuration
# ============================================
NODE_ENV=development
APP_NAME=SpendShare

# ============================================
# Database Configuration
# ============================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spendshare
DB_USER=spendshare
DB_PASSWORD=spendshare_dev_password

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=spendshare
MONGO_PASSWORD=spendshare_dev_password
MONGO_DATABASE=spendshare_chat

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=spendshare_dev_password

# ============================================
# Authentication & Security
# ============================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY_PATH=

# ============================================
# Service Ports
# ============================================
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
GROUP_SERVICE_PORT=3003
EXPENSE_SERVICE_PORT=3004
CHAT_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
SETTLEMENT_SERVICE_PORT=3007
PAYMENT_SERVICE_PORT=3008

OCR_SERVICE_PORT=8000

WEB_APP_PORT=3000
API_GATEWAY_PORT=8000

# ============================================
# Storage Configuration
# ============================================

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=spendshare-receipts
S3_BUCKET_REGION=us-east-1

# MinIO (Development)
MINIO_ENDPOINT=localhost:9000
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=receipts

# ============================================
# Email Configuration
# ============================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@spendshare.com
EMAIL_FROM_NAME=SpendShare

# SendGrid (Alternative)
SENDGRID_API_KEY=

# AWS SES (Alternative)
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@spendshare.com

# ============================================
# SMS Configuration (Optional)
# ============================================

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS SNS
AWS_SNS_REGION=us-east-1

# ============================================
# Push Notifications
# ============================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=
FCM_PROJECT_ID=

# Apple Push Notification Service
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_TOPIC=com.spendshare.app
APNS_KEY_PATH=

# ============================================
# OCR & Computer Vision
# ============================================

# Tesseract (Open Source - Default)
TESSERACT_PATH=/usr/bin/tesseract

# Google Cloud Vision (Premium)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# AWS Textract (Premium)
AWS_TEXTRACT_REGION=us-east-1

# ============================================
# Payment Processing
# ============================================

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_CLIENT_ID=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Venmo (if available)
VENMO_CLIENT_ID=
VENMO_CLIENT_SECRET=

# ============================================
# External APIs
# ============================================

# Currency Exchange Rates
EXCHANGE_RATE_API_KEY=
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# ============================================
# Monitoring & Logging
# ============================================

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Log Level
LOG_LEVEL=debug

# ============================================
# Analytics
# ============================================

# Google Analytics
GA_TRACKING_ID=

# Mixpanel
MIXPANEL_TOKEN=

# Firebase Analytics
FIREBASE_PROJECT_ID=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Feature Flags
# ============================================
ENABLE_CHAT=true
ENABLE_OCR=true
ENABLE_PAYMENTS=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# ============================================
# Mobile App Configuration
# ============================================

# App Store
APPLE_APP_ID=
APPLE_TEAM_ID=

# Google Play
GOOGLE_PLAY_PACKAGE_NAME=com.spendshare.app
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=

# In-App Purchases
IAP_SHARED_SECRET=

# ============================================
# Development Tools
# ============================================

# MailHog (Development email testing)
MAILHOG_SMTP_HOST=localhost
MAILHOG_SMTP_PORT=1025

# Database Seeds
SEED_DATABASE=false

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false
